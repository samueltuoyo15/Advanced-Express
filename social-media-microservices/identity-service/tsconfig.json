{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./", 
    "paths": {
      "@/*": ["./*"],
      "@/routes/*": ["./routes/*"], 
      "@/middleware/*": ["./middleware/*"], 
      "@/config/*": ["./config/*"],
      "@/models/*": ["./models/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/utils/*": ["./utils/*"]
    }
  }
}